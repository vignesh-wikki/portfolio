</head>
<body>
  <div class="background-img">
    <div class=" bg-white">
    {{> Header}}
  </div>
  <section class="container  align-self-center " >
    <div class="container py-1">
      <div class="container py-1">
        <div class="container">
          <div class="glass-card">
            <div class="">
              <div class="col-md-6  d-flex align-items-center">
                <div class="card-body card-body ps-xs-5 pe-xs-5 ps-sm-5 pe-sm-5  ps-md-5 pe-md-5  ps-lg-5 pe-lg-5 text-black ">

                  <form action="/logged" method="post">
  
                    <div class="ms-5 ps-4 mb-3">
                        <img class="ms-5 " src="https://img.icons8.com/external-others-inmotus-design/67/000000/external-V-alphabet-others-inmotus-design-13.png" alt="logo" height="60px" width="55px" /> 
                    </div>

                    <h5 class="fw-strong mb-3 pb-3  form-label-custom" style="letter-spacing: 1px;">Sign into your account</h5>

                    <div class="form-outline mb-4 ">
                      <input type="email"  class="form-control form-control-lg" name="email" required/>
                      <label class="form-label form-label-custom mt-2" for=""><span>Email address</span></label>
                    </div>
  
                    <div class="form-outline mb-4">
                      <input type="password"  class="form-control form-control-lg " name="password" required/>
                      <label class="form-label  form-label-custom mt-2" for="">Password</label>
                    </div>
  
                    <div class="pt-1 mb-4">
                      <input class="btn btn-dark btn-lg btn-block" type="submit"></input>
                    </div>
                    
                   
                    <a class="small text-muted" href="#!">Forgot password?</a>
                    <p class="mb-1 " style="color: #393f81;"><span class=" form-label-custom">Don't have an account?</span> <a href="/Register"
                        style="color: #393f81;"><span class=" form-label-custom">Register here</span></a></p>
                  </form>
                  </div>
                  </div>
                  </div>
                </div>
              </div>
            </div>
      </div>
  </section>
  </div>

	
  

